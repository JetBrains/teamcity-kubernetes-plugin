

<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.jetbrains.teamcity</groupId>
  <artifactId>local-artifact-installer</artifactId>
  <version>${TeamCityVersion}</version>
  <properties>
    <kubernetes-client-lib>kubernetes-client-lib</kubernetes-client-lib>
  </properties>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-install-plugin</artifactId>
        <executions>
          <execution>
            <id>install-kubernetes-client</id>
            <phase>package</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <artifactId>kubernetes-client</artifactId>
              <groupId>io.fabric8</groupId>
              <version>5.12.4-teamcity-patched</version>
              <packaging>jar</packaging>
              <createChecksum>true</createChecksum>
              <file>${kubernetes-client-lib}/kubernetes-client-5.12.4-teamcity-patched.jar</file>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>